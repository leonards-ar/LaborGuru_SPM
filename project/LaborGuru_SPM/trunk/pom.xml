<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.mindpool.laborguru</groupId>
	<version>1.0-SNAPSHOT</version>
	<artifactId>spm</artifactId>
	<packaging>war</packaging>
	<name>SPM Project</name>
	<url>http://www.mindpool.com.ar/spm</url>
	<developers>
		<developer>
			<id>mariano</id>
			<name>Mariano Capurro</name>
			<email>mcapurro@gmail.com</email>
		</developer>
		<developer>
			<id>federico</id>
			<name>Federico Barrera Oro</name>
			<email>fbarreraoro@gmail.com</email>
		</developer>
		<developer>
			<id>cristian</id>
			<name>Cristin Nunez Rebolledo</name>
			<email>cnunezre@gmail.com</email>
		</developer>
	</developers>
	<build>
		<finalName>spmwebapp</finalName>
		<plugins>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>maven-jetty-plugin</artifactId>
				<configuration>
					<webApp>${basedir}/target/spmwebapp.war</webApp>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<!-- hibernate ddl generation -->
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>hibernate3-maven-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<components>
						<component>
							<name>hbm2ddl</name>
							<implementation>
								configuration
							</implementation>
						</component>
					</components>
					<componentProperties>
						<propertyfile>
							hibernate.properties
						</propertyfile>
						<outputfilename>spm-schema.sql</outputfilename>
						<drop>true</drop>
						<create>true</create>
						<export>false</export>
						<jdk5>true</jdk5>
						<format>true</format>
					</componentProperties>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
