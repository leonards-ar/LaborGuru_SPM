<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.laborguru.model" schema="spm">
	<class name="Office" table="tbl_offices">
		<id name="id" type="int" unsaved-value="null" column="office_id">
			<generator class="identity" />
		</id>
		<property name="name" column="name" type="string" length="150" />
		<property name="type" column="type" type="char" length="1" />
		<many-to-one name="parentOffice" class="Office" foreign-key="fk_offices_offices">
			<column name="parent_office_id"/>
		</many-to-one>
	</class>
	<database-object>
		<create>ALTER TABLE tbl_offices AUTO_INCREMENT=1000</create>
		<drop></drop>
	</database-object>   	
</hibernate-mapping>