<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.laborguru.model" schema="spm">
    <class name="Profile" table="tbl_profiles">

        <id name="id" type="int" unsaved-value="null" column="id">
            <generator class="native">
            	<param name="sequence">tbl_profiles_id_seq</param>
            	<param name="parameters">increment by 1 start with 1000</param>
            </generator>
        </id>

        <property name="name" column="name" type="string" length="50" not-null="true"/>       
        <property name="description" column="description" type="string" length="50" />        

	    <set name="permissions" table="tbl_profiles_permissions" lazy="true">
	        <key column="profileId"/>
	        <many-to-many column="permissionId" class="Permission"/>
	    </set>
    </class>
</hibernate-mapping>


