<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="report"  namespace="/report" extends="spm-default">
		<action name="totalHoursReport_*" method="{1}" class="com.laborguru.action.report.TotalHoursReportPrepareAction">
			<result name="wait" type="tiles">showWaitingPageForReport</result>
			<result name="input" type="tiles">showWeeklyTotalHours</result>
			<result name="showWeeklyTotal">/tiles/report/weekly_totalHours_report.jsp</result>
			<result name="showWeeklyTotalByPosition">/tiles/report/weekly_totalHoursByPosition_report.jsp</result>
			<result name="show">/tiles/report/weekly_totalHoursByPosition_data.jsp</result>
		</action>
		
	</package>
</struts>
