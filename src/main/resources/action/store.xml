<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="store" namespace="/store" extends="spm-default">		
		<action name="store_*" method="{1}" class="com.laborguru.action.store.StorePrepareAction">
			<result name="edit" type="tiles">editStorePage</result>
			<result name="show" type="tiles">showStorePage</result>
			<result name="list" type="tiles">listStoresPage</result>
			<result name="listAction" type="redirectAction">store_list</result>
			<result name="input" type="tiles">editStorePage</result>			
		</action>
		
		<action name="storeOperationTimes_*" method="{1}" class="com.laborguru.action.store.OperationTimePrepareAction">
			<result name="edit" type="tiles">editOperationTimePage</result>
			<result name="show" type="tiles">showOperationTimePage</result>
			<result name="cancelEdit" type="tiles">listStoresPage</result>
			<result name="cancelShow" type="redirectAction">store_list</result>
			<result name="input" type="tiles">editOperationTimePage</result>			
		</action>
		
		<action name="storePosition_*" method="{1}" class="com.laborguru.action.store.StorePositionPrepareAction">
			<result name="edit" type="tiles">positionNamesEditor</result>
			<result name="show" type="tiles">positionNamesView</result>
			<result name="cancelEdit" type="tiles">listStoresPage</result>
			<result name="cancelShow" type="redirectAction">store_list</result>
			<result name="input" type="tiles">editOperationTimePage</result>
		</action>		
		
		<action name="store_weekdayGuestServ_edit">
			<result type="tiles">weekdayGuestServEditor</result>
		</action>

		<action name="store_weekdayGuestServ_view">
			<result type="tiles">weekdayGuestServView</result>
		</action>
		
		<action name="store_positionNames_edit">
			<result type="tiles">positionNamesEditor</result>
		</action>

		<action name="store_positionNames_view">
			<result type="tiles">positionNamesView</result>
		</action>		
		
		<action name="store_daypartDefinition_edit">
			<result type="tiles">daypartDefinitionEditor</result>
		</action>

		<action name="store_daypartDefinition_view">
			<result type="tiles">daypartDefinitionView</result>
		</action>			
	</package>
</struts>