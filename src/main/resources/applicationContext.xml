<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

<import resource="applicationContext-security.xml"/>
<bean id="loginAction" class="com.laborguru.action.login.LoginAction" scope="prototype">
<property name="userService" ref="userService"/>
</bean>

	<bean id="userService"
		class="com.laborguru.service.user.UserServiceBean">
		<property name="userDao" ref="userDao" />
	</bean>

	<bean id="userDao"
		class="com.laborguru.service.user.dao.UserDaoHibernate">
		<property name="hibernateTemplate">
			<ref bean="hibernateTemplate" />
		</property>
	</bean>
	
	<bean id="authenticateService" class="com.laborguru.service.security.AuthenticationService">
		<property name="service" ref="userService" />
	</bean>


	<bean id="hibernateTemplate" class="org.springframework.orm.hibernate3.HibernateTemplate">
		<property name="sessionFactory">
			<ref bean="mySessionFactory" />
		</property>
	</bean>


	<bean id="mySessionFactory"	class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource">
			<ref local="myDataSourcePool" />
		</property>
		<property name="mappingResources">
			<list>
				<value>com/laborguru/model/User.hbm.xml</value>
				<value>com/laborguru/model/Profile.hbm.xml</value>
				<value>com/laborguru/model/Permission.hbm.xml</value>
				<value>com/laborguru/model/MenuItem.hbm.xml</value>				
			</list>
		</property>
		<property name="hibernateProperties">
			<ref local="hibernateProperties" />
		</property>

	</bean>

	<bean id="hibernateProperties"
		class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="properties">
			<props>
				<prop key="hibernate.dialect">
					org.hibernate.dialect.PostgreSQLDialect
				</prop>
				<prop key="hibernate.show_sql">true</prop>
			</props>
		</property>
	</bean>

	<bean id="myDataSourcePool"
		class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="${db.driverClassName}" />
		<property name="url" value="${db.url}" />
		<property name="username" value="${db.username}" />
		<property name="password" value="${db.password}" />
	</bean>
	
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    	<property name="location" value="WEB-INF/classes/spm.properties"/>
	</bean>
</beans>

