<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.laborguru.model" schema="spm">
    <class name="Permission" table="tbl_permissions">

        <id name="id" type="int" unsaved-value="null" column="permission_id">
			<generator class="identity" />        
            <!-- generator class="native">
            	<param name="sequence">tbl_permissions_id_seq</param>
            	<param name="parameters">increment by 1 start with 1000</param>
            </generator-->
        </id>

        <property name="name" column="name" type="string" length="50" not-null="true"/>       
        <property name="description" column="description" type="string" length="50" />        

    </class>
</hibernate-mapping>


