<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.laborguru.model" schema="spm">
    <class name="User" table="tbl_users">

        <id name="id" type="int" unsaved-value="null" column="id">
            <generator class="native">
            	<param name="sequence">tbl_users_id_seq</param>
            	<param name="parameters">increment by 1 start with 1000</param>
            </generator>
        </id>

        <property name="userName" column="username" type="string" length="50" not-null="true"/>       
        <property name="password" column="password" type="string" length="50" />        
        <property name="name" column="name" type="string" length="50" />
        <property name="surname" column="surname" type="string" length="100" />

	    <set name="profiles" table="tbl_users_profiles" lazy="true">
	        <key column="userId"/>
	        <many-to-many column="profileId" class="Profile"/>
	    </set>
    </class>
</hibernate-mapping>


